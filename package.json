{
  "name": "hms-system",
  "version": "1.0.0",
  "description": "Hospital Management System - Complete Desktop Application",
  "main": "index.js",
  "scripts": {
    "start": "node scripts/start-with-wait.js",
    "start:parallel": "concurrently \"npm run start:backend\" \"npm run start:desktop\" --names \"Backend,Desktop\" --prefix-colors \"blue,green\" --kill-others-on-fail",
    "start:backend": "cd hms-desktop/backend && npm run dev",
    "start:frontend": "cd hms-desktop && npm run dev",
    "start:desktop": "cd hms-desktop && npm run start:desktop-only",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd hms-desktop/backend && npm run build",
    "build:frontend": "cd hms-desktop && npm run build",
    "install:all": "npm install && cd hms-desktop && npm install && cd backend && npm install",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd hms-desktop/backend && rm -rf dist node_modules",
    "clean:frontend": "cd hms-desktop && rm -rf dist node_modules",
    "dev": "npm run start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd hms-desktop/backend && npm test",
    "test:frontend": "cd hms-desktop && npm test"
  },
  "keywords": [
    "hospital",
    "management",
    "system",
    "electron",
    "react",
    "typescript",
    "nodejs",
    "postgresql"
  ],
  "author": "HMS Development Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/hms-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/hms-system/issues"
  },
  "homepage": "https://github.com/your-org/hms-system#readme"
}
